#Linux-Repo
#git@github.com:habibmasri/Linux.git
#croncore.sh
#!/bin/bash
crontab -l > cronpac
grep PAC cronpac > cronpactest
if [ -s cronpactest ]; then
echo "Cron job alredy configured"
else mkdir pac2Logs
echo '#!/bin/bash
/bin/gtar -czvf `pwd`/PAC.cor.`date +"%y%m%d"`.tar.gz `pwd`/core*; rm `pwd`/core*; mv `pwd`/PAC*.gz `pwd`/pac2Logs' > PAC.CORE2.sh
chmod +x PAC.CORE2.sh
echo "0 0 * * * `pwd`/PAC.CORE2.sh" >> cronpac
echo "0 0 * * 5 find `pwd`/pac2Logs/PAC*.gz -mtime +7 -exec rm {} \;" >> cronpac
crontab cronpac
fi
rm cronpac cronpactest

